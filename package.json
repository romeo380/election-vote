{
  "name": "voting-portal",
  "version": "1.0.0",
  "description": "Modern Voting Portal packaged as a Windows desktop application.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "Your Name or Organization",
  "license": "MIT",
  "devDependencies": {
    "electron": "^23.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.voting.portal",
    "productName": "Voting Portal",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
